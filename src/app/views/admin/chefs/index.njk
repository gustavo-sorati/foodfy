{% extends 'templates/layouts/admin.njk' %}
{% from '../../../components/macros/admin/chef-list.njk' import chef_list as chefList%}

{% block search %}
{% include 'components/filter.njk'%}
{% endblock %}

{% block css %}
<link rel="stylesheet" href="/styles/admin/index.css">
{% endblock %}

{{ chefList('Gerenciar chefes', chefs)}}

{% block content %}
    <section class="management-wrapper container">
        <div class="management chefs">
            <h1 class="title">Gerenciar chefes</h1>

            {% for chef in chefs %}
                <div class="recipes">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                    
                    <div class="info">
                        <h3>{{chef.name}}</h3>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>     
                </div>
            {% endfor %}

        </div>
    </section>
{% endblock %}