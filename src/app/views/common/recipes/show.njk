{% extends 'layout.njk' %}

{% block css%}
<link rel="stylesheet" href="/styles/admin/show.css">
{% endblock %}

{% block content %}

<section class="container show">

    <div class="card-control">
        <h2 class="subtitle">Receita: {{recipe.title}}</h1>
        <a href="/admin/recipes/{{recipe.id}}/edit" id="{{recipe.id}}" class="button">Editar receita</a>
    </div>

    <section class="card-image">
        <img src="{{recipe.image}}" alt="{{recipe.title}}">

        <h1 class="title">{{recipe.title}}</h1>
        <p>por {{recipe.name}}</p>
    </section>

    
    {# INGREDIENTS #}
    <section class="card-informations">
        {% if recipe.ingredients.length > 0 %}
        <div class="cards">
            <div class="subtitle">Ingredientes</div>
            <span class="show">Esconder</span>

            <ul class="list">
                {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}};</li>
                {% endfor%}
            </ul>
        </div>
        {% endif %}

        {# PREPARATION #}
        {% if recipe.preparation.length > 0 %}
        <div class="cards">
            <div class="subtitle">Modo de preparo</div>
            <span class="show">Esconder</span>

            <div class="list">
                <ul>
                    {% for preparation in recipe.preparation %}
                    <li>{{preparation}};</li>
                    {% endfor%}
                </ul>
            </div>
        </div>
        {% endif %}

        {# INFORMATIONS #}
        {% if recipe.information %}
        <div class="cards">
            <div class="subtitle">Informações Adicionais</div>
            <span class="show">Esconder</span>
            
            <div class="description">
                <p>{{recipe.information}}</p>
            </div>
        </div>
        {% endif %}
    </section>
</section>
{% endblock %}
