{% macro cheflist(title, chefs) %}
<section class="chefs separate">
        {% if title %}
            <div class="chefs__header">
                <h1 class="chefs__header-big">{{title}}</h1>
            </div>
        {% endif %}

        {% for chef in chefs%}
                <div class="chefs__card">
                    <img class="chefs__card__avatar" src="{{chef.avatar_url}}" alt="{{chef.name}}">
                                
                    <div class="chefs__info">
                        <span class="chefs__info">{{chef.name}}</span>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>     
                </div>
        {% endfor %}
</section>
{% endmacro %}